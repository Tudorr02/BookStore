@model BookStore.Models.LocationsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Locations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Locations" asp-action="Index" >
    <p>

        <select asp-for="LocationCountry" asp-items="Model.Countries">
            <option value="">All</option>
        </select>

        City: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locations![0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations![0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations![0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations![0].Opens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations![0].Closes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Locations) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opens)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Closes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
